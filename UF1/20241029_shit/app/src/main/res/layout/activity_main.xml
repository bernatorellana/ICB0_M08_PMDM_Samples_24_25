<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical">


        <TextView
            android:id="@+id/txvCrono"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="12:00"
            android:padding="20dp"
            android:textSize="30dp"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:background="@color/black"></TextView>

    <LinearLayout android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp">
        <TextView
            android:id="@+id/txvLocal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:textSize="200dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:background="#A3E6EB"/>
        <View android:layout_height="10dp"
                android:layout_width="0dp"
                android:layout_weight="1"></View>
        <TextView
            android:id="@+id/txvVisitant"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:textSize="200dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:background="#A3E6EB">
        </TextView>
    </LinearLayout>
    <View android:layout_width="30dp"
        android:layout_weight="1"
        android:layout_height="0dp"></View>
    <LinearLayout android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp">
        <Button
            android:id="@+id/btnLocal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="LOC"
            android:textSize="30dp"
            android:padding="20dp" />
        <View android:layout_height="10dp"
            android:layout_width="0dp"
            android:layout_weight="1"></View>
        <Button
            android:id="@+id/btnVisitant"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="VIS"
            android:textSize="30dp"
            android:padding="20dp" />

    </LinearLayout>

</LinearLayout>