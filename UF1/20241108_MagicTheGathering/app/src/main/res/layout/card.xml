<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="200dp"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/rounded_card"
    android:padding="20dp"

    >

    <ImageView
        android:id="@+id/imgCardImage"
        android:layout_gravity="center"
        android:layout_width="220dp"
        android:layout_height="180dp"
        android:scaleType="matrix"
        android:layout_margin="-40dp"
        android:src="@drawable/card"
        ></ImageView>
    <TextView
        android:id="@+id/txtCardName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#E2DDB9"
        android:textSize="20dp"
        android:textAlignment="center"
        android:text="Ancestor's Chosen"></TextView>
    <TextView
        android:id="@+id/txtCardType"
        android:layout_width="match_parent"
        android:textAlignment="center"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:textSize="15dp"
        android:text="Creature â€” Human Cleric"></TextView>
    <TextView
        android:id="@+id/txtCardDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:textSize="14dp"
        android:text=" First strike\nWhen Ancestor's Chosen comes into play, you gain 1 life for each card in your graveyard.
"></TextView>

</LinearLayout>